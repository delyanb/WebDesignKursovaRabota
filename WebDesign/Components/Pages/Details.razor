@page "/books/{BookId:int}"
@inject HttpClient Http
@using System.Globalization
@using Models

<h1>Book Details</h1>

@if (IsLoading)
{
    <p>Loading...</p>
}
else if (Error != null)
{
    <p class="text-danger">@Error</p>
}
else if (GivenBook != null)
{
    <div class="book-details">
        <h2>@GivenBook.Title</h2>
        <p><strong>Author:</strong> @GivenBook.Author</p>
        <p><strong>Price:</strong> @GivenBook.Price.ToString("C", CultureInfo.CurrentCulture)</p>
        <p><strong>Description:</strong> @GivenBook.Description</p>
        <a href="@BackUrl" class="btn btn-secondary">Back to list</a>
    </div>
}
else
{
    <p>Book not found.</p>
}

@code {
    [Parameter]
    public int BookId { get; set; }

    [Parameter]
    [SupplyParameterFromQuery(Name = "from")]
    public string? FromPage { get; set; }

    private string BackUrl => FromPage switch
    {
        "best-sellers" => "/best-sellers",
        "books" => "/books",
        _ => "/books"
    };


    private Book? GivenBook { get; set; }
    private bool IsLoading { get; set; } = true;
    private string? Error { get; set; }

    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;
        try
        {
            var response = await Http.GetFromJsonAsync<WebDesignAPI.Models.GetBookByIdResponse>($"https://localhost:7078/Books/{BookId}");

            if (response == null || !response.Success || response.Book == null) 
            { 
                Error = "Error retrieving book data.";
                IsLoading = false;
                return;
            }

            GivenBook = new Book()
            {
                Author = response.Book.Author,
                Description = response.Book.Description,
                Id = response.Book.Id,
                Title = response.Book.Title,
                Price = response.Book.Price,
                ImageUrl = response.Book.ImageUrl
            };
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            IsLoading = false;
        }
    }


}